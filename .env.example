# Application
NODE_ENV=development
PORT=3000

# CORS (URLs del frontend)
# Si no se especifica, por defecto permite: localhost:5173, localhost:5174, localhost:5175, localhost:3000
CORS_ORIGIN=http://localhost:5173,http://localhost:5174,http://localhost:5175

# Firebase Admin SDK
# Opción 1: Service Account Path
FIREBASE_SERVICE_ACCOUNT_PATH=./firebase-service-account.json

# Opción 2: Variables individuales (para deployment en cloud)
# FIREBASE_PROJECT_ID=your-project-id
# FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\n...\n-----END PRIVATE KEY-----\n"
# FIREBASE_CLIENT_EMAIL=firebase-adminsdk-xxxxx@your-project.iam.gserviceaccount.com

# Firebase Storage
FIREBASE_STORAGE_BUCKET=your-project.appspot.com

# Anthropic API
ANTHROPIC_API_KEY=sk-ant-xxxxxxxxxxxxx
ANTHROPIC_MODEL=claude-sonnet-4-20250514

# Cloudinary
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret

# Upload Configuration
MAX_FILE_SIZE=5242880
ALLOWED_IMAGE_TYPES=image/jpeg,image/png,image/webp

# Rate Limiting
THROTTLE_TTL=60000
THROTTLE_LIMIT=100
SCAN_THROTTLE_LIMIT=10
AI_THROTTLE_LIMIT=20

# Logging
LOG_LEVEL=debug
